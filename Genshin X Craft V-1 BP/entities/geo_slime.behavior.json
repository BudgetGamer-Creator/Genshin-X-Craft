{
	"format_version": "1.16.0",
	"minecraft:entity": {
		"description": {
			"identifier": "gi:geo_slime",
			"runtime_identifier": "minecraft:slime",
			"is_spawnable": true,
			"is_summonable": true,
			"is_experimental": false
		},
		"component_groups": {
			"slime_calm": {
				"minecraft:movement.jump": {
					"jump_delay": [
						0.6,
						1.6
					]
				}
			},
			"slime_aggressive": {
				"minecraft:movement.jump": {
					"jump_delay": [
						0.15,
						0.45
					]
				},
				"minecraft:behavior.move_towards_target": {
					"priority": 3,
					"speed_multiplier": 1.4
				}
			}
		},
		"components": {
			"minecraft:type_family": {
				"family": [
					"slime",
					"monster",
					"mob"
				]
			},
			"minecraft:health": {
				"value": 50,
				"max": 100
			},
			"minecraft:movement": {
				"value": 0.6
			},
			"minecraft:collision_box": {
				"width": 1,
				"height": 1
			},
			"minecraft:physics": {},
			"minecraft:pushable": {
				"is_pushable": true,
				"is_pushable_by_piston": true
			},
			"minecraft:nameable": {},
			"minecraft:loot": {
				"table": "loot_tables/entities/elemental_slime.json"
			},
			"minecraft:jump.static": {},
			"minecraft:can_climb": {},
			"minecraft:breathable": {
				"total_supply": 15,
				"suffocate_time": 0
			},
			"minecraft:navigation.walk": {
				"can_path_over_water": true,
				"avoid_water": false,
				"can_pass_doors": true,
				"can_open_doors": false,
				"can_break_doors": false
			},
			"minecraft:area_attack": {
				"damage_range": 0.8,
				"damage_per_tick": 5,
				"damage_cooldown": 0.7,
				"cause": "entity_attack",
				"entity_filter": {
					"any_of": [
						{
							"test": "is_family",
							"subject": "other",
							"value": "player"
						},
						{
							"test": "is_family",
							"subject": "other",
							"value": "irongolem"
						},
						{
							"test": "is_family",
							"subject": "other",
							"value": "snowgolem"
						}
					]
				}
			},
			"minecraft:target_nearby_sensor": {
				"inside_range": 16,
				"outside_range": 20,
				"on_inside_range": {
					"event": "minecraft:become_aggressive",
					"target": "self"
				},
				"on_outside_range": {
					"event": "minecraft:become_calm",
					"target": "self"
				}
			},
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 2,
				"must_see": true,
				"entity_types": [
					{
						"filters": {
							"any_of": [
								{
									"test": "is_family",
									"subject": "other",
									"value": "player"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "irongolem"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "snowgolem"
								}
							]
						},
						"max_dist": 16
					}
				]
			},
			"minecraft:behavior.slime_float": {
				"priority": 1,
				"jump_chance_percentage": 0.8,
				"speed_multiplier": 1.2
			},
			"minecraft:behavior.slime_attack": {
				"priority": 4
			},
			"minecraft:behavior.slime_random_direction": {
				"priority": 5,
				"add_random_time_range": 3,
				"turn_range": 360,
				"min_change_direction_time": 2
			},
			"minecraft:behavior.slime_keep_on_jumping": {
				"priority": 6,
				"speed_multiplier": 1
			},
			"minecraft:despawn": {
				"despawn_from_distance": {}
			},
			"minecraft:experience_reward": {
				"on_death": "query.last_hit_by_player?5:0"
			}
		},
		"events": {
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"slime_calm"
					]
				}
			},
			"minecraft:become_aggressive": {
				"remove": {
					"component_groups": [
						"slime_calm"
					]
				},
				"add": {
					"component_groups": [
						"slime_aggressive"
					]
				}
			},
			"minecraft:become_calm": {
				"remove": {
					"component_groups": [
						"slime_aggressive"
					]
				},
				"add": {
					"component_groups": [
						"slime_calm"
					]
				}
			}
		}
	}
}
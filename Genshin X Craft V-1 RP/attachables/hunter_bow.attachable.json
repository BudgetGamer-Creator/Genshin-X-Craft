{
    "format_version": "1.10.0",
    "minecraft:attachable": {
        "description": {
            "identifier": "gi:hunter_bow",
            "item": {"gi:hunter_bow": "query.owner_identifier == 'minecraft:player'"},
            "render_controllers": ["controller.render.item_default"],
            "materials": {"default": "entity_alphatest", "enchanted": "entity_alphatest_glint"},
            "textures": {"default": "textures/entity/attachable/hunters_bow", "enchanted": "textures/misc/enchanted_item_glint"},
            "geometry": {"default": "geometry.hunter_bow"},
            "particle_effects": {"magic_sparkle": "minecraft:endrod"},
            "particle_emitters": {"bow_flash": "minecraft:endrod"},
            "animations": {
                "idle_fp": "animation.hunter_bow.idle_first_person",
                "idle_tp": "animation.hunter_bow.idle_third_person",
                "charge_fp": "animation.hunter_bow.charge_first_person",
                "charge_tp": "animation.hunter_bow.charge_third_person"
            },
            "scripts": {
                "pre_animation": [
                    "variable.charge_amount = query.is_using_item ? (variable.charge_amount + 0.1) : 0;",
                    "variable.charge_amount = math.clamp(variable.charge_amount, 0, 1);"
                ],
                "animate": [
                    {"idle_fp": "c.is_first_person && !query.is_using_item"},
                    {"idle_tp": "!c.is_first_person && !query.is_using_item"},
                    {"charge_fp": "c.is_first_person && query.is_using_item"},
                    {"charge_tp": "!c.is_first_person && query.is_using_item"}
                ]
            }
        }
    }
}